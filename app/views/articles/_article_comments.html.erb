<!-- COMMENTS -->
              <div id="comments" class="comments">

                <h4 class="page-header margin-bottom-60 size-20">
                  <span><%= @article.comments.count %></span> <%= Russian.p(@article.comments.count, "КОММЕНТАРИЙ", "КОММЕНТАРИЯ", "КОММЕНТАРИЕВ") %>
                </h4>

                <div class="comment-list">

                  <% @article.comments.order("created_at DESC").each do |comment| %>
                  <div class="row">
                    <div class="col-md-2 col-sm-2 hidden-xs">
                      <figure class="thumbnail">
                        <%= image_tag comment.user.avatar.url, :class => "img-responsive" %>
                        <figcaption class="text-center"><%= link_to comment.user.name, user_path(comment.user) %></figcaption>
                      </figure>
                    </div>
                    <div class="col-md-10 col-sm-10">
                      <div class="panel panel-default arrow left">
                        <div class="panel-body">
                          <header class="text-left">
                            <div class="comment-user"><i class="fa fa-user"></i> <%= comment.user.name %></div>
                            <span class="comment-date"><i class="fa fa-clock-o"></i> <%= Russian::strftime(@article.created_at, "%d %B %Y") %></span>
                          </header>
                          <div class="comment-post">
                            <p>
                              <%= comment.text %>
                            </p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>

                </div>

                <%= render "new_comment" %>

              </div>
              <!-- /COMMENTS -->